{% extends '::admin.html.twig' %}

{% block title %}
    Space - Dashboard - {{ title }}
{% endblock %}

{% block header_title %}
    {{ title }}
{% endblock %}

{% block header_desc %}
    Index
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>ImgUrl</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>
                                        <a href="{{ path(title|lower ~ '_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
                                    </td>
                                    <td>{{ entity.description[:200] ~ '...' | nl2br }}</td>
                                    <td><a href="{{ asset(entity.imgUrl) }}">{{ entity.imgUrl }}</a></td>
                                    <td>
                                        <a class="btn btn-primary"
                                           href="{{ path(title|lower ~ '_edit', { 'id': entity.id }) }}"><i
                                                    class="fa fa-edit"></i> Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-primary" href="{{ path(title|lower ~ '_new') }}">
                        <i class="fa fa-plus"></i> Add a new {{ title|slice(0, (title|length - 1)) }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
